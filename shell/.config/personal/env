#!/usr/bin/env zsh

# Super cool keyboard stuffs.
# Required for x applications
# setxkbmap -option caps:ctrl_modifier

# Wayland/X11 detection and setup
if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
    export MOZ_ENABLE_WAYLAND=1
    export QT_QPA_PLATFORM=wayland
    export GDK_BACKEND=wayland
    alias xclip='wl-copy'
    alias xsel='wl-paste'
    alias xsc='wl-copy'
    export STOW_FOLDERS="bin,nvim,tmux,shell,machine,personal,zsh,xkb,work,git,ssh,alacritty,hypr"
    export XKB_CONFIG_ROOT="$HOME/.config/xkb"
else
    # X11 setup
    setxkbmap -option caps:ctrl_modifier
    alias xsc="xclip -selection clipboard"
    export STOW_FOLDERS="bin,nvim,tmux,shell,machine,personal,zsh,xkb,work,git,ssh,i3,x11"
fi



startMongo() {
    sudo systemctl start mongod
    sudo systemctl enable mongod
}

increaseWatchers() {
    sudo sysctl fs.inotify.max_user_watches=65536
    sudo sysctl -p
}

#change_background() {
#    dconf write /org/mate/desktop/background/picture-filename "'$HOME/dotfiles/backgrounds/$(ls ~/dotfiles/backgrounds | fzf)'"
#}


die () {
    echo >&2 "$@"
    exit 1
}

addToPath() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$PATH:$1
    fi
}

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

commitDotFiles() {
    pushd $DOTFILES
    pushd personal
    git add .
    git commit -m "automagic commit..."
    git push origin master
    popd
    git add .
    git commit -m "automagic commit..."
    git push origin master
    popd
}
